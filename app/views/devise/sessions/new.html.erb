<div class="container text-center">
  <h2 class="titles main main-color">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :email, class: "main main-color" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :password, class: "main main-color" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "main main-color" %>
        </div>
      </div>
    <% end %>

    <div class ="py-3">
      <div class="actions main main-color">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
    
  <span class="main main-color"><%= render "devise/shared/links" %></span>

</div>


